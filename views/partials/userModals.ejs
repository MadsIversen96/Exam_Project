<!-- EDIT USER MODAL-->
<div id="editUserModal" class="modal">
    <div class="modal-content">
      
        <div class="input-group">
          <label for="id" class="label">Id:</label>
          <input type="text" id="editUserInput0" name="editUserInput0" readonly>
      </div>
  
        <div class="input-group">
            <label for="email" class="label">Email:</label>
            <input type="text" id="editUserInput1" name="editUserInput1">
        </div>

        <div class="input-group">
            <label for="username" class="label">Username:</label>
            <input type="text" id="editUserInput2" name="editUserInput2">
        </div>

        <div class="input-group">
            <label for="firstname" class="label">Firstname:</label>
            <input type="text" id="editUserInput3" name="editUserInput3">
        </div>

        <div class="input-group">
            <label for="lastname" class="label">Lastname:</label>
            <input type="text" id="editUserInput4" name="editUserInput4">
        </div>

        <div class="input-group">
            <label for="telephone" class="label">Telephone:</label>
            <input type="text" id="editUserInput5" name="editUserInput5">
        </div>

        <div class="input-group">
          <label for="address" class="label">Address:</label>
          <input type="text" id="editUserInput6" name="editUserInput6">
      </div>

        <div class="input-group">
            <label for="role" class="label">Role:</label>
        <select id="editUserInput7" name="editUserInput7">
          <% roles.forEach(role => { %>
            <option value="<%= role.name %>"><%= role.name %></option>
          <% }); %>
        </select>
        </div>
  
        <div class="button-group">
          <button onclick="editUser()">Save Changes</button>
          <button onclick="closeModal('editUserModal')">Cancel</button>
        </div>
    </div>
  </div>
  